{% extends "BettingSasUIBundle::layout.html.twig" %}

{% block content %}
<div class="count">
    {{ 'user.item.count'|transchoice(pagination.getTotalItemCount, {}, 'user') }}
</div>

<table>
    <tr>
        <th>{{ knp_pagination_sortable(pagination, 'Username', 'username') }}</th>
        <th>{{ knp_pagination_sortable(pagination, 'lastLogin', 'lastLogin') }}</th>
        <th>{{ 'action'|trans }}</th>
    </tr>
    {% for user in pagination %}
        <tr>
            <td>{{ user.username }}</td>
            <td>{{ user.lastLogin|date('Y-m-d H:m:s') }}</td>
        </tr>
    {% endfor %}
</table>

<div class="navigation">
    {{ knp_pagination_render(pagination) }}
</div>
{% endblock %}