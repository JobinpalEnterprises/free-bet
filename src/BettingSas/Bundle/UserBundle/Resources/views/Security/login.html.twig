{% extends "BettingSasUIBundle::layout.html.twig" %}

{% block htmlclass %} class="bg-black"{% endblock %}
{% block bodyclass %}bg-black{% endblock %}

{% block title %}{{ 'login.title'|trans({}, 'security') }}{% endblock %}

{% block content %}
<div class="form-box" id="login-box">
    <div class="header">{{ 'login.title'|trans({}, 'security') }}</div>
    <form action="{{ path("fos_user_security_check") }}" method="post">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        <div class="body bg-gray">
            {% if error %}
                <div class="alert flat-alert alert-danger">
                    <p>{{ error|trans({}, 'security') }}</p>
                </div>
            {% endif %}
            <div class="form-group">
                <input type="text" name="_username" class="form-control" placeholder="{{ 'login.username'|trans({}, 'security') }}"/>
            </div>
            <div class="form-group">
                <input type="password" name="_password" class="form-control" placeholder="{{ 'login.password'|trans({}, 'security') }}"/>
            </div>
            <div class="form-group">
                <input type="checkbox" name="_remember_me"/> {{ 'login.remember_me'|trans({}, 'security') }}
            </div>
        </div>
        <div class="footer">
            <button type="submit" name="_submit" value="{{ 'login.submit'|trans({}, 'security') }}" class="btn bg-olive btn-block">
                {{ 'login.submit'|trans({}, 'security') }}
            </button>

            <p><a href="{{ path('fos_user_resetting_request') }}">{{ 'login.forgot_password'|trans({}, 'security') }}</a></p>

            <a href="{{ path('fos_user_registration_register') }}" class="text-center">{{ 'login.register'|trans({}, 'security') }}</a>
        </div>
    </form>
</div>
{% endblock content %}
