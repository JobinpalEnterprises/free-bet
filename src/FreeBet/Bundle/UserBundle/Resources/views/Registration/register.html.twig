{% extends "FreeBetUserBundle::layout.html.twig" %}

{% block htmlclass %} class="bg-black"{% endblock %}
{% block bodyclass %}bg-black{% endblock %}

{% block title %}{{ 'registration.title'|trans({}, 'security') }}{% endblock %}

{% form_theme form "FreeBetUserBundle:Form:FOSFormTheme.html.twig" %}

{% block body %}
<div class="form-box" id="login-box">
    <div class="header">{{ 'registration.title'|trans({}, 'security') }}</div>
    <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="post">

        {{ form_widget(form) }}

        <div class="footer">
            <button type="submit" class="btn bg-olive btn-block">{{ 'registration.submit'|trans({}, 'security') }}</button>
            <a href="{{ path('fos_user_security_login') }}" class="text-center">{{ 'registration.has_account'|trans({}, 'security') }}</a>
        </div>
    </form>
</div>
{% endblock %}
